{
  "apiVersion": "v1",
  "spec": {
    "kind": "Workflow",
    "spec": {
      "type": "sequential",
      "steps": [
        {
          "kind": "Addon",
          "spec": {
            "name": "civic-calculator",
            "description": "",
            "type": "mysql",
            "version": "8.0.30",
            "billing": {
              "deploymentPlan": "nf-compute-50",
              "storageClass": "ssd",
              "storage": 4096,
              "replicas": 1
            },
            "tlsEnabled": true,
            "externalAccessEnabled": false,
            "ipPolicies": [],
            "pitrEnabled": false
          }
        },
        {
          "kind": "SecretGroup",
          "spec": {
            "name": "available-zinc",
            "secretType": "environment",
            "priority": 10,
            "secrets": {
              "WORDPRESS_DB_HOST": ""
            },
            "addonDependencies": [
              {
                "addonId": "civic-calculator",
                "keys": [
                  {
                    "keyName": "HOST",
                    "aliases": [
                      "HOST"
                    ]
                  },
                  {
                    "keyName": "PORT",
                    "aliases": [
                      "PORT"
                    ]
                  },
                  {
                    "keyName": "USERNAME",
                    "aliases": [
                      "WORDPRESS_DB_USER"
                    ]
                  },
                  {
                    "keyName": "PASSWORD",
                    "aliases": [
                      "WORDPRESS_DB_PASSWORD"
                    ]
                  },
                  {
                    "keyName": "DATABASE",
                    "aliases": [
                      "WORDPRESS_DB_NAME"
                    ]
                  }
                ]
              }
            ]
          }
        },
        {
          "kind": "DeploymentService",
          "spec": {
            "name": "spiky-addition",
            "billing": {
              "deploymentPlan": "nf-compute-50"
            },
            "deployment": {
              "instances": 1,
              "storage": {
                "ephemeralStorage": {
                  "storageSize": 1024
                }
              },
              "external": {
                "imagePath": "library/wordpress:latest"
              }
            },
            "ports": [
              {
                "name": "p01",
                "internalPort": 80,
                "public": true,
                "protocol": "HTTP"
              }
            ],
            "healthChecks": []
          }
        }
      ]
    }
  },
  "name": "wordpress",
  "description": "",
  "project": {
    "id": "wordpress-template"
  }
}